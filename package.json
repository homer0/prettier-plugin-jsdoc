{
  "name": "@homer0/prettier-plugin-jsdoc",
  "description": "A Prettier plugin to format JSDoc blocks",
  "version": "10.0.1",
  "repository": "homer0/prettier-plugin-jsdoc",
  "author": "Leonardo Apiwan (@homer0) <me@homer0.com>",
  "license": "MIT",
  "keywords": [
    "jsdoc",
    "prettier",
    "comments",
    "documentation",
    "javascript"
  ],
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "dependencies": {
    "comment-parser": "^1.4.1",
    "ramda": "0.32.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@homer0/eslint-plugin": "^12.0.8",
    "@homer0/prettier-config": "^2.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@vitest/coverage-istanbul": "^4.0.15",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "leasot": "^14.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.3",
    "semantic-release": "^25.0.2",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "prettier": "^3.5.3"
  },
  "engine-strict": true,
  "engines": {
    "node": ">=20"
  },
  "main": "src/index.js",
  "scripts": {
    "prepare": "./utils/scripts/prepare",
    "test:unit": "./utils/scripts/test-unit",
    "test:e2e": "./utils/scripts/test-e2e",
    "test": "./utils/scripts/test",
    "lint": "./utils/scripts/lint",
    "lint:all": "./utils/scripts/lint-all",
    "todo": "./utils/scripts/todo"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier --write"
    ]
  }
